<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/list_view"
        android:listSelector="@color/white"
        android:background="@color/white"
        android:divider="@color/border_color"
        android:dividerHeight="@dimen/separator_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dist_n"
        android:paddingBottom="@dimen/dist_n"
        android:orientation="vertical"
        android:background="@drawable/layer_container_top_border">

        <Button
            style="@style/GreenBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dist_n"
            android:layout_marginRight="@dimen/dist_n"
            android:text="@string/submit"
            android:id="@+id/btn_submit" />

        <Button
            style="@style/GreenBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dist_n"
            android:layout_marginRight="@dimen/dist_n"
            android:layout_marginTop="@dimen/dist_n"
            android:text="@string/skip_the_step"
            android:id="@+id/btn_skip" />
    </LinearLayout>

</LinearLayout>